  "version": "0.2.0",
  "configurations": [
    {
      "name": "Mocha Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--require", "ts-node/register",
        "--require", "src/test/fixtures.ts",
        "-u","tdd",
        "--timeout","999999",
        "--colors",
        "${workspaceFolder}/src/test/**/*.ts"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
    },
    {
      "name": "Launch Program",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/test/test.ts",
      "sourceMaps": true,
      //"preLaunchTask": "build",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
    }
  ]
}